{
  "name": "chastikey.js",
  "version": "1.2.1",
  "description": "ChastiKey API Wrapper",
  "main": "./app/ChastiKey.js",
  "repository": "https://github.com/ChastiKey/chastikey.js",
  "author": "Emma <RileyIO>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "trash app",
    "dev": "tsc -w",
    "test": "run-s clean build test:n",
    "test:n": "ava",
    "test:v": "ava --verbose --serial",
    "test:w": "ava --verbose --watch",
    "test:js": "ava ./test/js-tests.js",
    "prepare": "run-s build",
    "prepublishOnly": "run-s test:n",
    "postinstall": "tsc"
  },
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "env": {
      "es6": true
    }
  },
  "tslint": {
    "rules": {
      "new-parens": true,
      "no-arg": true,
      "no-console": [
        false,
        "log",
        "error"
      ],
      "no-let": true,
      "quotemark": [
        true,
        "single",
        "backtick"
      ],
      "ordered-imports": [
        true,
        {
          "import-sources-order": "lowercase-last",
          "named-imports-order": "lowercase-first"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "printWidth": 120
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "trash": "^6.0.0",
    "trash-cli": "^3.0.0",
    "ts-node": "^8.5.2",
    "tslint": "^5.20.1"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "typescript": "^3.7.2"
  }
}
